<?xml version="1.0" encoding="UTF-8"?>
<description xmlns="http://openoffice.org/extensions/description/2006"
             xmlns:dep="http://openoffice.org/extensions/description/2006"
             xmlns:xlink="http://www.w3.org/1999/xlink">

    <identifier value="com.presearch.tools"/>

    <version value="1.0.0"/>

    <display-name>
        <name lang="en">Presearch Tools</name>
    </display-name>

    <publisher>
        <name xlink:href="https://presearch.com" lang="en">Presearch</name>
    </publisher>

    <extension-description>
        <src lang="en" xlink:href="description/description-en.txt"/>
    </extension-description>

    <icon>
        <default xlink:href="icons/presearch-logo.png"/>
    </icon>

    <dependencies>
        <OpenOffice.org-minimal-version value="4.1" dep:name="OpenOffice.org 4.1"/>
    </dependencies>

    <registration>
        <simple-license accept-by="admin" suppress-on-update="true">
            <license-text xlink:href="LICENSE.txt" lang="en"/>
