<?xml version="1.0" encoding="UTF-8"?>
<!--
  PreOffice Windows Installer (WiX Toolset)
  Creates an MSI installer for Windows

  Build with:
    candle.exe PreOffice.wxs -ext WixUIExtension
    light.exe PreOffice.wixobj -ext WixUIExtension -o PreOffice.msi
-->
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <?define ProductName = "PreOffice" ?>
  <?define ProductVersion = "1.0.0" ?>
  <?define ProductManufacturer = "Presearch" ?>
  <?define UpgradeCode = "E8A8B1C2-D3E4-F5A6-B7C8-D9E0F1A2B3C4" ?>

  <Product Id="*"
           Name="$(var.ProductName)"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.ProductManufacturer)"
           UpgradeCode="$(var.UpgradeCode)"
           Language="1033">

    <Package InstallerVersion="400"
             Compressed="yes"
             InstallScope="perMachine"
             Platform="x64"
             Description="$(var.ProductName) - AI-Powered Office Suite by Presearch"
             Manufacturer="$(var.ProductManufacturer)"
             Comments="PreOffice is a customized LibreOffice distribution with PrePanda AI integration" />

    <!-- Upgrade handling -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed."
                  AllowSameVersionUpgrades="yes" />

    <!-- Media -->
    <MediaTemplate EmbedCab="yes" CompressionLevel="high" />

    <!-- Icons -->
    <Icon Id="PreOfficeIcon" SourceFile="icons\preoffice.ico" />
    <Property Id="ARPPRODUCTICON" Value="PreOfficeIcon" />
    <Property Id="ARPHELPLINK" Value="https://presearch.com/preoffice" />
    <Property Id="ARPURLINFOABOUT" Value="https://presearch.com" />

    <!-- License -->
    <WixVariable Id="WixUILicenseRtf" Value="license\MIT.rtf" />

    <!-- Banner and Dialog images -->
    <WixVariable Id="WixUIBannerBmp" Value="images\banner.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="images\dialog.bmp" />

    <!-- UI -->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <!-- Installation directory -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="PreOffice">
          <!-- Main program files will be harvested from LibreOffice build -->
        </Directory>
      </Directory>

      <!-- Start Menu shortcuts -->
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="PreOffice" />
      </Directory>

      <!-- Desktop shortcut -->
      <Directory Id="DesktopFolder" Name="Desktop" />
    </Directory>

    <!-- Feature tree -->
    <Feature Id="ProductFeature" Title="PreOffice" Level="1" ConfigurableDirectory="INSTALLFOLDER">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentGroupRef Id="PrePandaComponents" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="DesktopShortcut" />
    </Feature>

    <!-- Main application components (harvested from build) -->
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- These will be generated by heat.exe from the LibreOffice build -->
      <!-- Example placeholder component -->
      <Component Id="ProgramFilesComponent" Guid="*">
        <File Id="soffice.exe" Name="soffice.exe" Source="$(var.SourceDir)\program\soffice.exe" KeyPath="yes" />
      </Component>
    </ComponentGroup>

    <!-- PrePanda AI Extension -->
    <ComponentGroup Id="PrePandaComponents" Directory="INSTALLFOLDER">
      <Component Id="PrePandaExtension" Guid="A1B2C3D4-E5F6-7890-ABCD-EF1234567890">
        <File Id="PrePandaOxt" Name="PreOffice.oxt" Source="extensions\PreOffice-1.0.0.oxt" />
      </Component>
    </ComponentGroup>

    <!-- Start Menu Shortcut -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="B2C3D4E5-F6A7-8901-BCDE-F23456789012">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="PreOffice Writer"
                  Description="PreOffice Word Processor"
                  Target="[INSTALLFOLDER]program\swriter.exe"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="PreOfficeIcon" />

        <Shortcut Id="CalcStartMenuShortcut"
                  Name="PreOffice Calc"
                  Description="PreOffice Spreadsheet"
                  Target="[INSTALLFOLDER]program\scalc.exe"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="PreOfficeIcon" />

        <Shortcut Id="ImpressStartMenuShortcut"
                  Name="PreOffice Impress"
                  Description="PreOffice Presentations"
                  Target="[INSTALLFOLDER]program\simpress.exe"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="PreOfficeIcon" />

        <Shortcut Id="DrawStartMenuShortcut"
                  Name="PreOffice Draw"
                  Description="PreOffice Drawing"
                  Target="[INSTALLFOLDER]program\sdraw.exe"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="PreOfficeIcon" />

        <Shortcut Id="UninstallShortcut"
                  Name="Uninstall PreOffice"
                  Target="[SystemFolder]msiexec.exe"
                  Arguments="/x [ProductCode]" />

        <RemoveFolder Id="CleanUpShortCut" On="uninstall" />
        <RegistryValue Root="HKCU" Key="Software\Presearch\PreOffice" Name="installed" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <!-- Desktop Shortcut -->
    <DirectoryRef Id="DesktopFolder">
      <Component Id="DesktopShortcut" Guid="C3D4E5F6-A7B8-9012-CDEF-345678901234">
        <Shortcut Id="DesktopShortcutWriter"
                  Name="PreOffice Writer"
                  Description="PreOffice Word Processor"
                  Target="[INSTALLFOLDER]program\swriter.exe"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="PreOfficeIcon" />

        <RegistryValue Root="HKCU" Key="Software\Presearch\PreOffice" Name="desktopShortcut" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <!-- File Associations -->
    <Component Id="FileAssociations" Directory="INSTALLFOLDER" Guid="D4E5F6A7-B8C9-0123-DEF0-456789012345">
      <!-- .odt files -->
      <ProgId Id="PreOffice.Document" Description="PreOffice Document" Icon="PreOfficeIcon">
        <Extension Id="odt" ContentType="application/vnd.oasis.opendocument.text">
          <Verb Id="open" Command="Open" TargetFile="[INSTALLFOLDER]program\swriter.exe" Argument='"%1"' />
        </Extension>
      </ProgId>

      <!-- .ods files -->
      <ProgId Id="PreOffice.Spreadsheet" Description="PreOffice Spreadsheet" Icon="PreOfficeIcon">
        <Extension Id="ods" ContentType="application/vnd.oasis.opendocument.spreadsheet">
          <Verb Id="open" Command="Open" TargetFile="[INSTALLFOLDER]program\scalc.exe" Argument='"%1"' />
        </Extension>
      </ProgId>

      <!-- .odp files -->
      <ProgId Id="PreOffice.Presentation" Description="PreOffice Presentation" Icon="PreOfficeIcon">
        <Extension Id="odp" ContentType="application/vnd.oasis.opendocument.presentation">
          <Verb Id="open" Command="Open" TargetFile="[INSTALLFOLDER]program\simpress.exe" Argument='"%1"' />
        </Extension>
      </ProgId>
    </Component>

    <!-- Custom Actions -->
    <CustomAction Id="InstallExtension"
                  Directory="INSTALLFOLDER"
                  ExeCommand="program\unopkg.exe add --shared &quot;[INSTALLFOLDER]PreOffice.oxt&quot;"
                  Execute="deferred"
                  Impersonate="no"
                  Return="ignore" />

    <InstallExecuteSequence>
      <Custom Action="InstallExtension" After="InstallFiles">NOT Installed</Custom>
    </InstallExecuteSequence>

  </Product>

</Wix>
